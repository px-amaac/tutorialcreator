<% if !item.nil? %>
	<p>
		<h4><%= item.title %></h4>
		<% if user_signed_in? && @tutorial.user_id == current_user.id %>
		<%= link_to 'Edit', edit_tutorial_step_textblock_path(tutorial_id, step_id, item) %>
		<%= link_to 'Destroy', tutorial_step_textblock_path(tutorial_id, step_id, item), method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
		<%= markdown(item.textblock) %>
	</p>
<% end %>