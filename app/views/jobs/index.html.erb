<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Companyname</th>
      <th>Jobtitle</th>
      <th>Jobdescription</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.companyName %></td>
        <td><%= job.jobTitle %></td>
        <td><%= job.jobDescription %></td>
        <td><%= job.startDate %></td>
        <td><%= job.endDate %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

