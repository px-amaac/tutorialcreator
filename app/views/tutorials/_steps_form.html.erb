<p>
	<%= form_for([tutorial, step]) do |f| %>
  		<div class="field">
    		<%= f.label :title %>
    		<%= f.text_field :title %>
  		</div>
  		<div class="field">
    		<%= f.label :problem %>
    		<%= f.text_area :problem %>
  		</div>
  		<div class="field">
    		<%= f.label :solution %>
    		<%= f.text_area :solution %>
  		</div>
  		<%= f.submit "Add Step", class: "button success" %>
	<% end %>
</p>